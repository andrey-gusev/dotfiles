#!/usr/bin/env bash

exec >/dev/null 2>&1

if [ -n "$1" ] && [ -f "$1" ]; then
	wall="$1"
else
	wall=$(find "$HOME/pix" -type f -name "*.jpg" -o -name "*.png" | shuf -n 1)
fi
wal -c
# Цветовая схема берётся из фона рабочего стола
# wal -i "$wall"
# Цветовая схема статическая
wal --theme sexy-hund
# wal --theme base16-gruvbox-soft
hyprctl hyprpaper preload "$wall"
hyprctl hyprpaper wallpaper ",$wall"
pkill waybar
waybar &
