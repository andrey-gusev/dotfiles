#!/bin/bash

chosen=$(echo -e "ðŸ’€ Shutdown\nðŸ”„ Reboot\nðŸŒ™ Sleep\nðŸšª Exit" | rofi -dmenu -i -p "âš¡ Power control")

case "$chosen" in
